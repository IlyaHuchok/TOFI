<Window x:Class="BankPresentation.OperatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankPresentation"
        mc:Ignorable="d"
        Title="OperatorWindow" Height="318" Width="530">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="288" VerticalAlignment="Top" Width="522">
            <TabItem Header="CreditList" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="68">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="CreditListBox" HorizontalAlignment="Left" Height="224" Margin="339,22,0,0" VerticalAlignment="Top" Width="163"/>
                    <Label Content="Sort by" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="0,22,0,0" VerticalAlignment="Top" Width="143" SelectionChanged="comboBox_SelectionChanged"/>
                    <Label x:Name="label1" Content="Credit" HorizontalAlignment="Left" Margin="402,0,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label2" Content="Time" HorizontalAlignment="Left" Margin="296,0,0,0" VerticalAlignment="Top"/>
                    <ListBox x:Name="TimeListBox" HorizontalAlignment="Left" Height="224" Margin="284,22,0,0" VerticalAlignment="Top" Width="55"/>
                    <Label x:Name="label3" Content="Client" HorizontalAlignment="Left" Margin="194,0,0,0" VerticalAlignment="Top"/>
                    <ListBox x:Name="ClientListBox" HorizontalAlignment="Left" Height="224" Margin="143,22,0,0" VerticalAlignment="Top" Width="141"/>
                    <TextBox x:Name="PassportNoCreditList" HorizontalAlignment="Left" Height="23" Margin="0,223,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" IsReadOnly="True"/>
                    <Label  Content="PassportNo" HorizontalAlignment="Left" Margin="0,197,0,0" VerticalAlignment="Top" />
                </Grid>
            </TabItem>
            <TabItem Header="Credit">
                <Grid Background="#FFE5E5E5">
                    <Label Content="PassportNo" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="NameCredit" Content="Name" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
                    <Label Content="Credit type"  HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top"/>
                    <Label Content="Amount" HorizontalAlignment="Left" Margin="14,125,0,0" VerticalAlignment="Top"/>

                    <TextBox x:Name="CreditFieldPassportNo" HorizontalAlignment="Left" Height="23" Margin="86,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="CreditFieldName" HorizontalAlignment="Left" Height="23" Margin="10,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309" IsReadOnly="True"/>
                    <TextBox x:Name="CreditTypeField" HorizontalAlignment="Left" Height="23" Margin="86,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" IsReadOnly="True"/>
                    <TextBox x:Name="CreditAmount" Height="23" Margin="86,128,248,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" IsReadOnly="True"/>

                    <Button x:Name="CreditSearch" Content="Search" HorizontalAlignment="Left" Margin="224,10,0,0" VerticalAlignment="Top" Width="75" Click="CreditSearch_Click"/>
                    <Button x:Name="Details" Content="Details" HorizontalAlignment="Left" Margin="337,66,0,0" VerticalAlignment="Top" Width="75" Click="Details_Click"/>
                    <Button x:Name="Request" Content="Send a request" HorizontalAlignment="Right" Margin="0,184,86,0" VerticalAlignment="Top" Width="93"/>
                    <Button x:Name="Reject" Content="Reject a request" HorizontalAlignment="Left" Margin="86,184,0,0" VerticalAlignment="Top" Width="100"/>
                </Grid>
            </TabItem>
            <TabItem Header="Repayment">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="RepaymentFieldPassportNo" HorizontalAlignment="Left" Height="23" Margin="86,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Label  Content="PassportNo" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="RepaymentFieldName" HorizontalAlignment="Left" Height="23" Margin="10,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309" IsReadOnly="True"/>
                    <TextBox x:Name="RepaymentFieldAmountOfPaymentPerMonth" HorizontalAlignment="Left" Height="23" Margin="324,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" IsReadOnly="True"/>
                    <Label x:Name="label" Content="Amount of payment per month" HorizontalAlignment="Left" Margin="324,39,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="RepaymentSubmit" Content="Submit" HorizontalAlignment="Left" Margin="205,121,0,0" VerticalAlignment="Top" Width="75" Click="RepaymentSubmit_Click"/>
                    <TextBox x:Name="FieldToPay" HorizontalAlignment="Left" Height="23" Margin="10,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178"/>
                    <Label Content="To pay" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" IsReadOnly="True"/>
                    <Label Content="Left to pay" HorizontalAlignment="Left" Margin="10,149,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="NameRepayment" Content="Name" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="RepaymentSearch" Content="Search" HorizontalAlignment="Left" Margin="220,10,0,0" VerticalAlignment="Top" Width="75"/>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
