<Window x:Class="BankPresentation.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankPresentation"
        mc:Ignorable="d"
        Title="ClientWindow" Height="318" Width="530">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="288" VerticalAlignment="Top" Width="522">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="236" Margin="311,10,0,0" VerticalAlignment="Top" Width="191"/>
                    
                    <Label x:Name="label" Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label1" Content="TimeMonths" HorizontalAlignment="Left" Margin="39,36,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label2" Content="PercentPerYear" HorizontalAlignment="Left" Margin="52,131,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label3" Content="Currency" HorizontalAlignment="Left" Margin="39,185,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label4" Content="FinePercent" HorizontalAlignment="Left" Margin="126,193,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label5" Content="MinAmount" HorizontalAlignment="Left" Margin="236,193,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
